<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.matteotognon.assessement.LoginActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:text="ENTRAR NA APLICAÇÂO"
        android:textSize="20dp"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/edtlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="55dp"
        android:ems="10"
        android:hint="LOGIN(EMAIL)"
        android:inputType="textPersonName"
        android:text=""
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edtconfirmarsenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edtlogin"
        android:layout_alignLeft="@+id/edtlogin"
        android:layout_alignRight="@+id/edtlogin"
        android:layout_alignStart="@+id/edtlogin"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="SENHA"
        android:inputType="textPersonName"
        android:text=""
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnlogar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edtconfirmarsenha"
        android:layout_alignLeft="@+id/edtconfirmarsenha"
        android:layout_alignRight="@+id/edtconfirmarsenha"
        android:layout_alignStart="@+id/edtconfirmarsenha"
        android:layout_below="@+id/edtconfirmarsenha"
        android:layout_marginTop="56dp"
        android:text="ENTRAR"
        android:onClick="logar"/>

    <Button
        android:id="@+id/btnvoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnlogar"
        android:layout_alignLeft="@+id/btnlogar"
        android:layout_alignRight="@+id/btnlogar"
        android:layout_alignStart="@+id/btnlogar"
        android:layout_below="@+id/btnlogar"
        android:layout_marginTop="35dp"
        android:text="Voltar para o menu"
        android:onClick="voltar"/>
</RelativeLayout>
